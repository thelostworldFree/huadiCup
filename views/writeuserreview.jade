extends layout

block content
	.head
		meta(charset="UTF-8")
	.body
		.col-sm-4
			h1.title.inline.slide-right
				= "写评价"
			form(name="submitReview", action="/writeUserReview/submitUserReview", method="post")
				label.control-label 用户:
				input.form-control(type="text", name="user", value= email, readonly)
				br
				label.control-label 内容:
				input.form-control(type="text", name="comment")
				br
				if norating
					.form-group.has-error
						label.control-label 星级:
						br
						label.control-label 请选择星级
						// Star rating from http://code.stephenmorley.org/html-and-css/star-rating-widget/
						span.starRating
							input(id="rating7", type="radio", name="rating", value="7")
							label(for="rating7") 7
							input(id="rating6", type="radio", name="rating", value="6")
							label(for="rating6") 6
							input(id="rating5", type="radio", name="rating", value="5")
							label(for="rating5") 5
							input(id="rating4", type="radio", name="rating", value="4")
							label(for="rating4") 4
							input(id="rating3", type="radio", name="rating", value="3")
							label(for="rating3") 3
							input(id="rating2", type="radio", name="rating", value="2")
							label(for="rating2") 2
							input(id="rating1", type="radio", name="rating", value="1")
							label(for="rating1") 1		
				else
					.form-group
						label.control-label 星级:
						// Star rating from http://code.stephenmorley.org/html-and-css/star-rating-widget/
						span.starRating
							input(id="rating7", type="radio", name="rating", value="7")
							label(for="rating7") 7
							input(id="rating6", type="radio", name="rating", value="6")
							label(for="rating6") 6
							input(id="rating5", type="radio", name="rating", value="5")
							label(for="rating5") 5
							input(id="rating4", type="radio", name="rating", value="4")
							label(for="rating4") 4
							input(id="rating3", type="radio", name="rating", value="3")
							label(for="rating3") 3
							input(id="rating2", type="radio", name="rating", value="2")
							label(for="rating2") 2
							input(id="rating1", type="radio", name="rating", value="1")
							label(for="rating1") 1		
				br
				br
				input.btn.btn-default.inline.col-sm-4(type="submit" value="确认")
				button.btn.btn-default.col-sm-4(onclick="window.history.back()", style="float: right") 取消